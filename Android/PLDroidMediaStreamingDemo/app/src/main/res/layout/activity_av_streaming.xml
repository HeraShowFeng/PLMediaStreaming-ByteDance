<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.qiniu.pili.droid.streaming.demo.ui.CameraPreviewFrameView
        android:id="@+id/cameraPreview_surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <include layout="@layout/focus_indicator"
        android:visibility="gone" />

    <TextView
        android:visibility="gone"
        android:id="@+id/log_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/cd_tv_log_info" />

    <EditText
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

    <Button
        android:visibility="gone"
        android:id="@+id/camera_switch_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/cd_btn_camera_switcher"
        android:textColor="@color/pldroid_streaming_white" />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <include
            layout="@layout/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/preview_mirror_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/cd_preview_mirror"
            android:text="Mirror\n(Preview)"
            android:textColor="@color/pldroid_streaming_white" />

        <Button
            android:id="@+id/encoding_mirror_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/cd_encoding_mirror"
            android:text="Mirror\n(Encode)"
            android:textColor="@color/pldroid_streaming_white" />

        <Button
            android:id="@+id/pic_streaming_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Picture\nStreaming"
            android:textColor="@color/pldroid_streaming_white" />

        <Button
            android:id="@+id/add_overlay_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add\nOverlay"
            android:textColor="@color/pldroid_streaming_white"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/mix_panel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audio mix panel"
            android:textColor="@color/pldroid_streaming_white" />

        <Button
            android:id="@+id/orientation_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/cd_btn_orientation"
            android:textColor="@color/pldroid_streaming_white" />

        <Button
            android:id="@+id/mute_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/cd_btn_mute"
            android:textColor="@color/pldroid_streaming_white" />

        <Button
            android:id="@+id/fb_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/cd_btn_fb"
            android:textColor="@color/pldroid_streaming_white" />

        <Button
            android:id="@+id/capture_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/cd_btn_capture"
            android:textColor="@color/pldroid_streaming_white" />

        <Button
            android:id="@+id/torch_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/cd_btn_torch"
            android:text="@string/flash_light_on"
            android:textColor="@color/pldroid_streaming_white"
            android:visibility="gone" />

    </LinearLayout>

    <SeekBar
        android:visibility="gone"
        android:id="@+id/beautyLevel_seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="60dp"
        android:max="100"
        android:progress="100" />

    <include layout="@layout/camera_button_holder"
        android:visibility="gone" />

    <include
        layout="@layout/audio_mixer"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/ic_logo"
                android:layout_marginStart="30dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

<!--            <android.support.v7.widget.SwitchCompat-->
<!--                android:id="@+id/switch_exclusive"-->
<!--                android:textColor="@color/colorWhite"-->
<!--                android:checked="true"-->
<!--                android:padding="10dp"-->
<!--                android:layout_gravity="end|center_vertical"-->
<!--                android:layout_marginEnd="70dp"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"/>-->

            <ImageView
                android:id="@+id/iv_change_camera"
                android:src="@drawable/ic_refresh"
                android:layout_gravity="end"
                android:layout_marginEnd="30dp"
                android:padding="10dp"
                android:background="@drawable/bg_item_unselect_selector"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </FrameLayout>

        <com.bytedance.labcv.demo.view.VideoButton
            android:id="@+id/btn_take_pic"
            android:layout_width="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_height="80dp"
            android:layout_marginBottom="120dp"
            android:background="@drawable/bg_take_pic_selector"
            />

        <LinearLayout
            android:id="@+id/fps_group"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FPS:"
                android:textSize="18sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/info_fps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="30"
                android:textSize="18sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_face_verify"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="20dp"
            android:padding="10dp"
            android:background="@color/colorBg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/similarity"
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/cost"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="end"
                android:layout_marginStart="20dp"
                android:minWidth="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_similarity_face_verify"
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_cost_face_verify"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_result_face_verify"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/faceinfotrans"
            android:layout_marginTop="100dp"
            android:layout_marginStart="20dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/tip_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="200dp"
            android:visibility="visible"/>

        <FrameLayout
            android:id="@+id/board_container"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true"
            />

        <ImageView
            android:id="@+id/iv_face_verify_show"
            android:layout_above="@id/board_container"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:layout_width="80dp"
            android:layout_height="120dp" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/holo_red_dark"
            tools:text="test"/>
        <TextView
            android:id="@+id/camera_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_info"
            android:textColor="@android:color/holo_blue_dark"
            tools:text="test"/>

        <LinearLayout
            android:id="@+id/ll_feature"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <LinearLayout
                android:id="@+id/ll_effect"
                android:orientation="vertical"
                android:background="@drawable/bg_item_unselect_selector"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_effect"
                    android:padding="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:text="@string/effect"
                    android:textColor="@color/featureboard_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_sticker"
                android:orientation="vertical"
                android:layout_marginStart="30dp"
                android:background="@drawable/bg_item_unselect_selector"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_sticker"
                    android:padding="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:text="@string/sticker"
                    android:textColor="@color/featureboard_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_animoji"
                android:orientation="vertical"
                android:layout_marginStart="30dp"
                android:background="@drawable/bg_item_unselect_selector"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageView
                    android:src="@drawable/ic_sticker"
                    android:padding="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:text="moji"
                    android:textColor="@color/featureboard_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
